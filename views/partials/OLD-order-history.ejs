}

.rev-wrapper .swiper-pagination-bullet {
  height: 15px;
  width: 15px;
  overflow: hidden;
  opacity: 1;
  background: #B1B3F8;
}

.rev-wrapper .swiper-pagination-bullet-active::before {
  content: "";
