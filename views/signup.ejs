<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Sign Up - CarveLane</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/navbar.css" />
  <link rel="stylesheet" href="/css/signup.css" />
</head>
<body>
  
  <%- include("partials/navbar") %>

  <div class="loader-container hidden" id="loader">
    <div class="loader"></div>
    <p>Sending OTP...</p>
  </div>

  <div class="signup-main-container">
    <div class="signup-left-pane">
      <img src="/images/signup-banner.png" alt="Signup Banner" />
    </div>

    <div class="signup-right-pane">
      <!-- STEP 1 -->
      <div class="signup-step step-1 active" id="step1-form-section">
        <h2>Create your Account</h2>
        <form id="step1-form">
          <label for="name">Full Name:</label>
          <input type="text" id="name" name="name" placeholder="Your full name" required />

          <label for="email">Email:</label>
          <input type="email" id="email" name="email" placeholder="Enter your email" required />

          <div class="step1-buttons">
            <button type="button" id="send-otp-btn">Send OTP</button>
            <span class="or-text">or</span>
            <a href="/auth/google" class="google-signup-btn">Sign up with Google</a>
          </div>

          <p id="step1-message" class="error-message"></p>
        </form>
      </div>
      <!-- STEP 2 -->
      <div class="signup-step step-2 hidden" id="step2-form-section">
        <h2>Verify OTP</h2>
        <form id="step2-form">
          <label for="otp">Enter the OTP sent to your email:</label>
          <input type="text" id="otp" name="otp" placeholder="Enter OTP" required />

          <div class="otp-actions">
            <button type="button" id="verify-otp-btn">Verify OTP</button>
            <p class="resend-text">Didn't receive OTP? 
              <span id="resend-btn" class="disabled">Resend OTP (<span id="timer">60</span>s)</span>
            </p>
          </div>
          <p id="step2-message" class="error-message"></p>
        </form>
      </div>

      <!-- STEP 3 -->
      <div class="signup-step step-3 hidden" id="step3-form-section">
        <h2>Set Your Password</h2>
        <form id="step3-form" method="POST" action="/signup">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" placeholder="Enter password" required />

          <label for="confirmPassword">Confirm Password:</label>
          <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" required />

          <button type="button" id="show-password-toggle">Show</button>

          <button type="submit" id="signup-submit">Sign Up</button>
          <p id="step3-message" class="error-message"></p>
        </form>
      </div>


      <!-- Placeholder for Step 2 & 3 -->
      <!-- <div class="signup-step step-2 hidden"></div>
      <div class="signup-step step-3 hidden"></div> -->
    </div>
  </div>

  <script src="/js/signup.js"></script>
</body>
</html>
